{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["bun.lockb"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".bun", "dist/**", ".wrangler/**"],
      "cache": true
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "deploy": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "frontend#dev": {
      "dependsOn": ["backend#dev"]
    }
  }
}


