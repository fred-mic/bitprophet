{
    "name": "frontend",
    "module": "index.ts",
    "type": "module",
    "scripts": {
        "dev": "bun --serve --hot index.html",
        "prebuild": "mkdir -p dist",
        "build": "bun run build:css && bun run build:js && bun run build:html",
        "build:css": "bunx --bun tailwindcss -i ./styles.css -o ./dist/styles.css --minify",
        "build:js": "bun build index.tsx --outdir=dist --target browser --minify",
        "build:html": "cp index.html dist/index.html && sed -i.bak 's|./index.tsx|./index.js|g' dist/index.html && rm -f dist/index.html.bak"
    },
    "private": true,
    "devDependencies": {
        "@types/bun": "^1.3.1",
        "@types/react": "^18.2.79",
        "@types/react-dom": "^18.2.25",
        "bun-plugin-tailwind": "^0.1.2"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@repo/types": "workspace:*",
        "hono": "^4.10.4",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "recharts": "^3.3.0",
        "tailwindcss": "^4.1.17"
    }
}